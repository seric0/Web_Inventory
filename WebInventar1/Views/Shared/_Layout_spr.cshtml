                                @Html.ActionLink("Сетевое оборудование (Наименование)", "Network_hard_name", new { @class = "ajax-link" })
                            </li>
                            <li>
                                @Html.ActionLink("Сетевое оборудование (Тип)", "Network_hard_type", new { @class = "ajax-link" })
                            </li>
                            <li>
                                @Html.ActionLink("Принтер/МФУ (Наименование)", "Printer_name", new { @class = "ajax-link" })
                            </li>
                            <li>
                                @Html.ActionLink("Принтер/МФУ (Тип картриджа)", "Printer_type", new { @class = "ajax-link" })
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!--/span-->
            <!-- left menu ends -->

            @RenderBody()

        </div>

    </div><!--/.fluid-container-->   

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

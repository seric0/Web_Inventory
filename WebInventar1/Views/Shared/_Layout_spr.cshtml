<body>
    <div class="navbar navbar-default" role="navigation">

        <div class="navbar-inner">
            <a class="navbar-brand" href="index.html">
                <img alt="" src="img/logo20.png" class="hidden-xs" />
                <span>WebInventar</span>
            </a>

            <ul class="collapse navbar-collapse nav navbar-nav top-menu">
                <li><a href="#"> Отчеты</a></li>
            </ul>
            <div class="btn-group pull-right">
                <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    <span class="hidden-sm hidden-xs"> @ViewBag.user</span>
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><a href="#">Профиль</a></li>
                    <li class="divider"></li>
                    <li><a href="login.html">Выйти</a></li>
                </ul>
            </div>
        </div>
    </div>
    <!-- topbar ends -->
    <div class="ch-container">
        <div class="row">

            <!-- left menu starts -->
            <div class="col-sm-2 col-lg-2">
                <div class="sidebar-nav">
                    <div class="nav-canvas">
                        <div class="nav-sm nav nav-stacked">

                        </div>
                        <ul class="nav nav-pills nav-stacked main-menu">
                            <li class="nav-header">Справочники организации</li>
                            <li>
                                @Html.ActionLink("Организация", "Organization", new { @class = "ajax-link" }) 

                            <li>
                                @Html.ActionLink("Отделения/Подразделения", "Otdel", new { @class = "ajax-link" })
                            </li>
                            <li>
                                @Html.ActionLink("Кабинеты", "Cabinet", new { @class = "ajax-link" })
                            </li>
                            <li>
                                @Html.ActionLink("Сотрудники", "Worker", new { @class = "ajax-link" })
                            </li>
                            <li>
                                @Html.ActionLink("Должности", "Position", new { @class = "ajax-link" })
                            </li>
                            <li class="nav-header">Справочники (компьютерная техника)</li>
                            <li>
                                @Html.ActionLink("Процессоры (Наименование)", "Proc", new { @class = "ajax-link" })
                            </li>
                            <li>
                                @Html.ActionLink("Процессоры (Частота)", "Proc_ch", new { @class = "ajax-link" })
                            </li>
                            <li>
                                @Html.ActionLink("Объем памяти", "Ram", new { @class = "ajax-link" })
                            </li>
                            <li>
                                @Html.ActionLink("Объем жесткого диска", "Hdd", new { @class = "ajax-link" })
                            </li>
                            <li>
                                @Html.ActionLink("Рабочая группа/Домен", "Worksation", new { @class = "ajax-link" })
                            </li>
                            <li>
                                @Html.ActionLink("Операционная система", "Os", new { @class = "ajax-link" })
                            </li>
                            <li>
                                @Html.ActionLink("Офисная программа", "Office", new { @class = "ajax-link" })
                            </li>
                            <li>
                                @Html.ActionLink("Антивирус", "Antivirus", new { @class = "ajax-link" })
                            </li>
                            <li>
                                @Html.ActionLink("Браузер", "Browser", new { @class = "ajax-link" })
                            </li>                            
                            <li>
                                @Html.ActionLink("Комплектующие (Тип)", "Component_type", new { @class = "ajax-link" })

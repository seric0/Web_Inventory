@model IEnumerable<WebInventar1.Models.Printerwithcart>
@{
    ViewBag.Title = "Printer";
    Layout = "~/Views/Shared/_Layout_inv.cshtml";
}
    <div id="content" class="col-lg-10 col-sm-10">
        <!-- content starts -->
        <div>
            <ul class="breadcrumb">
                <li>
                    @Html.ActionLink("Главная", "Desktop", new { @class = "ajax-link" })
                </li>
                <li>
                    Компьютеры
                </li>
            </ul>
        </div>
        <div class=" row">
            <div class="col-md-3 col-sm-3 col-xs-6">
                <a data-toggle="tooltip" title="Всего компьютеров - @ViewBag.compcount" class="well top-block" href="/Home/Computers">

                    <div>Всего компьютеров</div>
                    <div>@ViewBag.compcount</div>
                </a>
            </div>

            <div class="col-md-3 col-sm-3 col-xs-6">
                <a data-toggle="tooltip" title="Всего ноутбуков - @ViewBag.noutcount" class="well top-block" href="/Home/Computers">

                    <div>Всего ноутбуков</div>
                    <div>@ViewBag.noutcount</div>
                </a>
            </div>

            <div class="col-md-3 col-sm-3 col-xs-6">
                <a data-toggle="tooltip" title="Всего принтеров - @ViewBag.printercount" class="well top-block" href="/Home/Printers">

                    <div>Всего принтеров</div>
                    <div>@ViewBag.printercount</div>
                </a>
            </div>

            <div class="col-md-3 col-sm-3 col-xs-6">
                <a data-toggle="tooltip" title="Всего комплектующих - @ViewBag.componentcount" class="well top-block" href="/Home/Component">

                    <div>Всего комплектующих</div>
                    <div>@ViewBag.componentcount</div>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="box col-md-12">
                <div class="box-inner">
                    <div class="box-header well" data-original-title="">
                        <h2> Список принтеров\мфу</h2>
                    </div>
                    <div class="box-content">
                        Всего принтеров - @ViewBag.count
                        <br>
                        @Html.ActionLink("Добавить", "Printersadd", new { @class = "btn btn-danger" })
                        <br>
                        @using (Html.BeginForm("Printers", "Home", FormMethod.Get))
                        {
                            <input type="text" name="search" value="@ViewBag.search" class="form-control" placeholder="поиск" />
                            <br>
                            <input type="submit" value="Поиск" class="btn btn-default" />
                            <br>
                        }
                        <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
                            <thead>
                                <tr>
                                    <th>Инвентарный номер</th>
                                    <th>Кабинет</th>
                                    <th>Наименование</th>
                                    <th>Тип</th>
                                    <th>Технология печати</th>
                                    <th>Формат печати</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var b in Model)
                                {
                                    <tr>
                                        <td>@b.Printer.Sys_inv_p</td>
                                        <td class="center">@b.Printer.Cab_p</td>
                                        <td class="center">@b.Printer_name.Name</td>
                                        <td class="center">@b.Printer_type.Name</td>
                                        <td class="center">@b.Printer_texnology.Name</td>
                                        <td class="center">@b.Printer_format.Name</td>
                                        <td class="center">
                                            <span class="label-success label label-default">1</span>
                                        </td>
                                        <td class="center">
                                            @Html.ActionLink("Просмотр", "PrinterView", new { ID = @b.Printer.PrinteriId }, new { @class = "btn btn-info" })
                                            @Html.ActionLink("Редактировать", "Printeredit", new { ID = @b.Printer.PrinteriId }, new { @class = "btn btn-info" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
<!-- content ends -->